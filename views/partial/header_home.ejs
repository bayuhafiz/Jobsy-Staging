<div class="header ">
    <!-- START MOBILE CONTROLS -->
    <!-- LEFT SIDE -->
    <div class="pull-left full-height visible-sm visible-xs">

    </div>
    <!-- RIGHT SIDE -->
    <div class="pull-right full-height visible-sm visible-xs">
        <!-- MOBILE DROPDOWN FILTER -->
        <ul id="filter-mobile" class="notification-list notification-list2 no-margin show-sm show-xs b-grey b-l b-r no-style p-l-30 p-r-20">
                <li class="p-r-15 inline">
                    <div class="mobile-dropdown">
                        <a href="javascript:;" id="notification-center" data-toggle="dropdown">
                            <i class="fa fa-list-ul"></i>
                        </a>
                        <!-- START Dropdown Filter -->
                        <div class="dropdown-menu notification-toggle" role="menu" aria-labelledby="notification-center">
                            <div class="notification-panel">
                                <div class="notification-body scrollable">
                                    <div class="notification-item unread clearfix">
                                        <div class="heading">
                                                <input type="text" class="responsive-search" placeholder="Click here to search">
                                                <div class="form-group ">
                                                    <% include ../dropdown/mobile_category_filter %>
                                                </div>
                                        </div>
                                        <div class="heading">
                                                <div class="form-group">
                                                    <% include ../dropdown/mobile_location_filter %>
                                                </div>
                                        </div>
                                        <div class="heading">
                                                <div class="form-group ">
                                                    <select class="full-width mobile-filter-dropdown" id="jobType-filter" data-init-plugin="select2" style="width: 98%;">
                                                        <option selected="" value="all">All Positions</option>
                                                        <option value="full-time">Full Time</option>
                                                        <option value="contract">Contract</option>
                                                        <option value="part-time">Part Time</option>
                                                    </select>
                                                </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- START Filter Footer-->
                                <div class="notification-footer text-center">
                                    <a href="#reset">Reset All Filters</a>
                                </div>
                                <!-- END Filter Footer-->
                            </div>
                        </div>
                        <!-- END Filter Dropdown -->
                    </div>
                </li>
        </ul>
        <!-- END MOBILE DROPDOWN FILTER -->
    </div>
    <!-- END MOBILE CONTROLS -->

    <div class=" pull-left sm-table">
        <div class="header-inner">
            <div class="brand brand-home inline pull-left">
                <% if (title == 'Homepage') { %>
                    <a href="/dash">
                <% } else { %>
                    <a href="/">
                <% } %>
                    <img src="assets/img/jobsy_logo_black.png" alt="logo" data-src="assets/img/jobsy_logo_black.png" data-src-retina="assets/img/jobsy_logo_black.png" width="73">
                </a>
            </div>

            <!-- search input -->
            <span class="search-link b-grey b-l">
                <i class="p-l-30 pg-search"></i>
                <span class="searchJob_tag">
                    <span class="category_tag"><span></span><i class="fa fa-times tags_filter_close"></i></span>
                    <span class="location_tag"><span></span><i class="fa fa-times tags_filter_close"></i></span>
                    <span class="jobType_tag"><span></span><i class="fa fa-times tags_filter_close"></i></span>
                    <input type="text" placeholder="Search here.." id="searchJob" class="searchJob">
                </span>
            </span>
            <!--<span class="search-link search-link-home"><i class="pg-search"></i><input type="text" placeholder="Search here.." id="searchJob" class="searchJob"></span>-->
            
        </div>
    </div>
    <div class=" pull-right">
        <!-- START User Info-->
        <% if (user) { %>
        <div class="dropdown-default theeee">
            <div class="visible-lg visible-md m-t-10" id="btnGroupVerticalDrop1" data-target="#" data-toggle="dropdown" aria-haspopup="true" role="button" aria-expanded="false">
                <div class="pull-left p-r-10 p-t-10 fs-16 font-heading" style="cursor:pointer;">
                    <span class="semi-bold"><%= user.firstName %> <%= user.lastName %></span>
                </div>
                <div class="thumbnail-wrapper d32 circular inline m-t-5" style="cursor:pointer">
                    <img id="user-avatar" data-name="<%= user.firstName.charAt(0) %><%= user.lastName.charAt(0) %>" alt="" width="32" height="32" class="user-info-pict">
                </div>
                <ul class="dropdown-menu profile-dropdown pull-right m-r-20 dropdown-user" role="menu" aria-labelledby="btnGroupVerticalDrop1" style="margin-top:0;padding-top:0">
                   <li><a href="#" data-target="#PostNewJob" data-toggle="modal">
                        <span class="pull-right bold" style="color:#12806D">Post New Job <i class="pg-arrow_right"></i></span>
                    </a></li>
                    <li><a href="#" onclick="location.href='/dash'">Dashboard</a></li>
                    <li><a href="#" data-target="#billingForm" data-toggle="modal">My Credits</a></li>
                    <li><a href="#" data-target="#accountSettings" data-toggle="modal">Account Settings</a></li>
                    <li class="bg-master-lighter" style="padding-bottom:0px;"><a href="#" onclick="location.href='/logout'">
                        <span>Logout</span>
                        <span class="pull-right"><i class="pg-power"></i></span>
                    </a></li>
                </ul>
                <div class="pull-right p-l-10 p-t-10 fs-16 font-heading" style="cursor:pointer">
                    <i class="fa fa-caret-down"></i>
                </div>
            </div>
        </div>
        <% } else { %>
        <div class="visible-lg visible-md m-t-10">
            <p class="post_job" data-target="#modalSlideLeft1" data-toggle="modal">Sign In to Post</p>
        </div>
        <% } %>
        <!-- END User Info-->
    </div>
</div>

<div class="filter-box">
    <form role="form">
        <div class="row">
            <div class="col-md-3" style="padding-right: 0;">
                <div class="form-group ">
                    <% include ../dropdown/category_filter %>
                </div>
            </div>
            <div class="col-md-3" style="padding-left:0;padding-right:0">
                <div class="form-group ">
                    <% include ../dropdown/location_filter %>
                </div>
            </div>
            <div class="col-md-3" style="padding-left:0;padding-right:0">
                <div class="form-group ">
                    <select class="full-width job-filter-dropdown" id="jobType-filter">
                        <option selected="" value="all">Job Type</option>
                        <option value="Full Time">Full Time</option>
                        <option value="Contract">Contract</option>
                        <option value="Part Time">Part Time</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3" style="padding-left:0;padding-right:0">
                <div class="form-group ">
                    <button class="btn btn-clear-all btn-cons" id="btn-clear-filters">Clear All</button>
                </div>
            </div>
        </div>
    </form>
</div>
