<div class="col-md-7 wrapper" style="padding:0 0">
    <div class="modal fade slide-right" id="PostNewJob" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-userdashboard">
            <div class="modal-content-wrapper">
                <div class="modal-content bg-modal-content outer">
                    <!--<button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="pg-close fs-14"></i></button>-->
                    <div class="panel panel-transparent middle">
                        <div class="panel-body">
                            <div class="panel-heading" style="padding:0">
                                <div class="panel-title" style="text-transform: none;">
                                    <div class="col-sm-12" style="padding-left: 0;">
                                        <p class="bold">CREATE YOUR FIRST POST</p>
                                        <p>Fill the following to create your new job post. Be as detailer as possible, this ensures quality of your candidates</p>
                                    </div>
                                </div>
                            </div>
                            <br>
                            <form action="/api/job/post" id="form-create-post" role="form" autocomplete="off" method="POST" enctype="multipart/form-data">
                                <div id="myFormWizard3">
                                    
                                    <!-- Nav tabs -->
                                    <ul class="nav nav-tabs nav-tabs-linetriangle nav-tabs-separator">
                                        <li class="active firstTab">
                                            <a data-toggle="tab" href="#tab1"><i class="fa fa-building-o tab-icon"></i> <span>Company Profile</span></a>
                                        </li>
                                        <li class="secondTab">
                                            <a data-toggle="tab" href="#tab2"><i class="fa fa-envelope-o tab-icon"></i> <span>Job Details</span></a>
                                        </li>
                                    </ul>
                                    <br>
                                    <div class="tab-content">

                                        <!-- First tab -->
                                        <div class="tab-pane active slide-left" id="tab1">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="box-cropper">
                                                        <div class="logoBox">
                                                            <img id="logo-preview" src="assets/img/logohere.png" />
                                                        </div>
                                                        <input type="file" id="logo_file" style="float:left; width: 250px">
                                                        <input id="image-source" type="hidden" name="cropped_image">
                                                    </div>
                                                </div>
                                            </div>
                                            <br>
                                            <br>
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <div class="form-group form-group-default">
                                                        <label>Company Name</label>
                                                        <input type="text" name="companyName" placeholder="" class="form-control" id="companyName" required>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="form-group form-group-default required">
                                                        <label>Location</label>
                                                        <% include ../dropdown/location_create %>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <div class="form-group form-group-default">
                                                        <label>Description</label>
                                                        <textarea id="editorAct1" name="description" class="description-text"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Second tab -->
                                        <div class="tab-pane slide-left" id="tab2">
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <div class="form-group form-group-default">
                                                        <label>Job Title</label>
                                                        <input type="text" class="form-control" name="jobTitle">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <div class="form-group form-group-default form-group-default-select2 required">
                                                        <label>Category</label>
                                                        <% include ../dropdown/category_create %>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="form-group form-group-default form-group-default-select2 required">
                                                        <label>Job Type</label>
                                                        <select class="full-width" name="jobType" data-placeholder="Choose job type" required>
                                                            <option></option>
                                                            <option value="full-time">Full Time</option>
                                                            <option value="contract">Contract</option>
                                                            <option value="part-time">Part Time</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <div class="form-group form-group-default">
                                                        <label>Job Scope <span class="hint-text small"></label>
                                                        <textarea id="editorAct2" name="jobScope" placeholder="Type or copy/paste here to fill job scopes"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                            <br />
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <div class="form-group form-group-default">
                                                        <label>Requirements  <span class="hint-text small"></label>
                                                        <textarea id="editorAct3" name="requirements" placeholder="Type or copy/paste here to fill requirements"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                            <br>
                                            <p>Salary : </p>
                                            <div class="row">
                                                <div class="col-sm-7">
                                                    <div class="row">
                                                        <div class="col-sm-3 col-xs-3">
                                                            <select name="currency" class="currency">
                                                                <option value="USD">USD</option>
                                                                <option value="IDR">IDR</option>
                                                            </select>
                                                        </div>
                                                        <div class="col-sm-9 col-xs-9">
                                                            <div class="input-daterange input-group">
                                                                <input name="salaryFrom" id="salary-from" type="text" placeholder="2.000.000" class="input-sm form-control"/>
                                                                <span class="input-group-addon">to</span>
                                                                <input name="salaryTo" id="salary-to" type="text" placeholder="4.000.000" class="input-sm form-control" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-5">
                                                    <div class="form-group salary-type">
                                                        <select name="salaryType" class="salaryType">
                                                            <option value="Monthly">Monthly</option>
                                                            <option value="Annually">Annually</option>
                                                            <option value="Daily">Daily</option>
                                                            <option value="Hourly">Hourly</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <br>
                                        <br>

                                        <!-- Pager -->
                                        <ul class="pager wizard">
                                            <li class="next btn-next">
                                                <button class="btn btn-primary btn-cons pull-right" type="button">
                                                <span>Job Details</span> <i class="pg-arrow_lright_line_alt"></i>
                                                </button>
                                            </li>
                                            <li class="next finish" style="display:none;">
                                                <button class="btn btn-primary btn-cons pull-right ladda-button" data-style="expand-right" id="btn-submit-post" data-size="s" type="submit">
                                                <span>Post Job</span>
                                                </button>
                                            </li>
                                            <li class="previous first" style="display:none;">
                                                <button class="btn btn-white btn-cons pull-right" type="button">
                                                <span>First</span>
                                                </button>
                                            </li>
                                            <li class="previous btn-previous">
                                                <button class="btn btn-primary btn-cons pull-right" type="button">
                                                <i class="pg-arrow_left_line_alt"></i>  <span>Company Profile</span>
                                                </button>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>