<!DOCTYPE html>
<html>
  <head>

    <% include ./partial/head %>

  </head>
  <body class="fixed-header menu-behind">


    <!-- START PAGE-CONTAINER -->
    <div class="page-container">
      <!-- START HEADER -->

        <% include ./partial/header_dash %>

      <!-- END HEADER -->

      <!-- START PAGE CONTENT WRAPPER -->
      <div class="page-content-wrapper">
        <!-- START PAGE CONTENT -->
        <div class="content">

          <div id="message"></div>
          
          <% include ./partial/jumbotron %>

          <!-- START CONTAINER FLUID -->
          <div class="container-fluid container-fixed-lg">
            <div class="row">
              <div class="col-md-12">
                <!-- START PANEL -->
                <div class="panel panel-transparent">

                    <% if (info.length > 0) { %>
                      <div class="msg-container" data-type="info" style="display:none;"><%= info %></div>
                    <% } else if (success.length > 0) { %>
                      <div class="msg-container" data-type="success" style="display:none;"><%= success %></div>
                    <% } else if (error.length > 0) { %>
                      <div class="msg-container" data-type="error" style="display:none;"><%= error %></div>
                    <% } %>

                    <input type="hidden" id="user-email" value="<%= user.email %>" />

                  <div class="panel-heading" id="user-job-counter">
                    <span class="panel-title" id="job-counter">
                    </span>
                    <!--<span class="radio radio-danger pull-right" data-init-plugin="js-switchery">
                        <input type="radio" checked="checked" value="hide" name="hide-radio" id="radio-hide">
                        <label for="radio-hide" class="small">Hide Deleted Job</label>
                        <input type="radio" value="show" name="hide-radio" id="radio-show">
                        <label for="radio-show" class="small">Show Deleted Job</label>
                    </span>-->

                    <div class="pull-right deletedJob-btn">
                      <div class="m-t-5 inline" style="  position: relative;top: -9px;">
                        <input id="job-switch" type="checkbox" class="switchery" />
                        <div class="chat-status available">
                        </div>
                      </div>
                      <div class="inline m-l-10">
                        <p class="small hint-text m-t-5 switch-label">Click to show
                        <br> deleted job posting</p>
                      </div>
                    </div>

                  </div>
                  <br>
                  <!-- START JOBS PANEL -->
                  <div id="no-job-post" class="text-center" style="display: none; margin-top: 10px;">
                    <h1>Oops, you don't have any published job posting yet.</h1>
                    <p><a href="#" data-target="#PostNewJob" data-toggle="modal">click here</a> to create a new job post or click on grren button above.</p>
                  </div>
                  <div class="jobs-panel">
                    <ul id="user-job-list" class="cbp-ntaccordion"></ul>
                  </div>
                  <!-- END JOBS PANEL -->

              </div>
            </div>
          </div>
          <!-- END CONTAINER FLUID -->
        </div>
        <!-- END PAGE CONTENT -->
        

      </div>
      <% include ./partial/copyright %>
      
      <!-- END PAGE CONTENT WRAPPER -->
    </div>
    <!-- END PAGE CONTAINER -->
    
    <!-- START MODAL -->

    <% include ./partial/modal %>

    <!-- END MODAL -->

    <% if (user) { %>
      <input type="hidden" id="init-login" value="<%= initLogin %>" />
      <input type="hidden" id="hidden-logo" value="<%= user.initCompany.logo %>" />
      <input type="hidden" id="hidden-name" value="<%= user.initCompany.name %>" />
      <input type="hidden" id="hidden-location" value="<%= user.initCompany.location %>" />
      <input type="hidden" id="hidden-description" value="<%= user.initCompany.description %>" />
    <% } %>

    <!-- BEGIN VENDOR JS -->

    <% include ./script/dash %>

    <!-- END PAGE LEVEL JS -->
  </body>
</html>