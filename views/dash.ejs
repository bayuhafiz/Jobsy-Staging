<!DOCTYPE html>
<html>
  <head>

    <% include ./partial/head %>

  </head>
  <body class="fixed-header menu-behind">


    <!-- START PAGE-CONTAINER -->
    <div class="page-container">
      <!-- START HEADER -->

        <% include ./partial/header_dash %>

      <!-- END HEADER -->

      <!-- START PAGE CONTENT WRAPPER -->
      <div class="page-content-wrapper">
        <!-- START PAGE CONTENT -->
        <div class="content">

          <div id="message"></div>
          
          <% include ./partial/jumbotron %>

          <!-- START CONTAINER FLUID -->
          <div class="container-fluid container-fixed-lg">
            <div class="row">
              <div class="col-md-12">
                <!-- START PANEL -->
                <div class="panel panel-transparent">

                    <% if (info.length > 0) { %>
                      <div class="msg-container" data-type="info" style="display:none;"><%= info %></div>
                    <% } else if (success.length > 0) { %>
                      <div class="msg-container" data-type="success" style="display:none;"><%= success %></div>
                    <% } else if (error.length > 0) { %>
                      <div class="msg-container" data-type="error" style="display:none;"><%= error %></div>
                    <% } %>

                    <input type="hidden" id="user-email" value="<%= user.email %>" />

                  <div id="no-job-post" class="text-center" style="display: none; margin-top: 10px;">
                    <h1>Oops, you don't have any job post yet.</h1>
                    <p><a href="#" data-target="#PostNewJob" data-toggle="modal">click here</a> to create a new job post or click on purple button above.</p>
                  </div>

                  <div class="panel-heading" id="user-job-counter">
                    <span class="panel-title" id="job-counter">
                      Job post counter here
                    </span>
                    <span class="radio radio-primary pull-right">
                        <input type="radio" checked="checked" value="hide" name="hide-radio" id="radio-hide">
                        <label for="radio-hide" class="small">Hide Deleted Job</label>
                        <input type="radio" value="show" name="hide-radio" id="radio-show">
                        <label for="radio-show" class="small">Show Deleted Job</label>
                    </span>
                  </div>
                  <!-- START TABLE -->
                  <div class="panel-body" id="user-job-table">
                    <div class="table-responsive">
                      <table class="table table-hover table-condensed table-detailed" id="detailedTable">
                          <tr>
                            <th style="width:25%" class="hint-text">&nbsp;&nbsp;&nbsp;Job Title</th>
                            <th style="width:15%" class="text-center">Status</th>
                            <th style="width:20%" class="text-center hidden-xs">Total Views</th>
                            <th style="width:20%" class="text-center hidden-xs hidden-sm">Total Applicants</th>
                            <th style="width:20%" class="text-center">Actions</th>
                          </tr>
                          <!-- Let the JQuery do its magic here !!! -->
                      </table>
                      <!-- END TABLE -->
                    </div>
                  </div>
                <!-- END PANEL -->
              </div>
            </div>
          </div>
          <!-- END CONTAINER FLUID -->
        </div>
        <!-- END PAGE CONTENT -->

        <!-- START COPYRIGHT -->
        
        <!-- END COPYRIGHT -->

      </div>
      <% include ./partial/copyright %>
      <!-- END PAGE CONTENT WRAPPER -->
    </div>
    <!-- END PAGE CONTAINER -->
    
    <!-- START MODAL -->

    <% include ./partial/modal %>

    <!-- END MODAL -->


    <!-- BEGIN VENDOR JS -->

    <% include ./script/dash %>

    <!-- END PAGE LEVEL JS -->
  </body>
</html>